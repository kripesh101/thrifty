{
    "root": true,
    "env": {
        "browser": true,
        "es6": true,
        "jest": true,
        "node": true
    },
    "extends": ["eslint:recommended", "plugin:import/recommended"],
    "overrides": [
        {
            "files": ["**/*.svelte"],
            "processor": "svelte3/svelte3"
        }
    ],
    "rules": {
        "prefer-const": "error",
        "camelcase": ["warn", { "allow": ["^UNSAFE_", "^u_"] }]
    },
    "parserOptions": {
        "ecmaVersion": 2019,
        "sourceType": "module",
        "extraFileExtensions": [".svelte"]
    },
    "plugins": ["import", "svelte3"]
}
