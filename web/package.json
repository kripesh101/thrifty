{
    "name": "thrifty-web",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite --host",
        "build": "vite build",
        "preview": "vite preview",
        "compile-theme": "npm run smui-theme-light && npm run smui-theme-dark",
        "smui-theme-light": "smui-theme compile public/smui.css -i src/theme",
        "smui-theme-dark": "smui-theme compile public/smui-dark.css -i src/theme/dark",
        "lint": "prettier --ignore-path .gitignore  --check --plugin-search-dir=. src && eslint --ignore-path .gitignore src",
        "fix": "prettier --ignore-path .gitignore --write --plugin-search-dir=. src && eslint --fix --ignore-path .gitignore src"
    },
    "devDependencies": {
        "@smui/button": "^6.0.0",
        "@sveltejs/vite-plugin-svelte": "^1.0.1",
        "eslint": "^8.20.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-svelte3": "^4.0.0",
        "prettier": "^2.7.1",
        "prettier-plugin-svelte": "^2.7.0",
        "smui-theme": "^6.0.0",
        "svelte": "^3.49.0",
        "vite": "^3.0.0"
    },
    "prettier": {
        "useTabs": false,
        "tabWidth": 4,
        "singleQuote": false,
        "semi": true,
        "trailingComma": "none",
        "printWidth": 100
    }
}
